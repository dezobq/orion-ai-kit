{
  "$schema": "https://stryker-mutator.io/stryker.schema.json",
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js"
  },
  "mutate": [
    "src/**/*.js",
    "src/**/*.ts",
    "sum.js",
    "!src/**/*.test.js",
    "!src/**/*.test.ts",
    "!src/**/*.spec.js",
    "!src/**/*.spec.ts",
    "!**/*.config.js",
    "!jest.config.js",
    "!eslint.config.js"
  ],
  "reporters": ["progress", "clear-text", "html", "json"],
  "tempDirName": ".stryker-tmp",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "coverageAnalysis": "perTest",
  "timeoutMS": 5000,
  "timeoutFactor": 1.5
}
